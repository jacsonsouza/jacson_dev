<div data-controller="sidebar">
   <button class="btn-rounded md:hidden fixed bottom-6 right-6 z-[1000]"
           data-sidebar-target="menuToggle"
           data-action="click->sidebar#toggleSidebar">
      <i class="fas fa-bars text-white text-2xl transition-all duration-300"></i>
   </button>

   <nav data-sidebar-target="sidebar"
        class="fixed top-0 left-0 w-64 flex flex-col z-[100] py-7 px-0 h-screen bg-gray-900/90 backdrop-blur-md shadow-lg -translate-x-full transition-transform duration-500 ease-in-out scroll-thin md:translate-x-0 md:block">

      <div class="flex flex-col items-center px-5 pb-5 border-b border-white/10 mb-5">
         <%= image_tag "default_pic.png", class: "avatar", alt: @current_user&.name %>
         <h2 class="heading-2 mb-3.5"><%= @current_user.name %></h2>
         <span class="badge"><%= t('users.menu.admin') %></span>
      </div>

      <% sections.each do |section| %>
         <h3 class="pt-3.5 px-6 pb-1 text-slate-400 text-sm uppercase tracking-wide mt-3.5">
            <%= section[:name] %>
         </h3>

         <ul role="list">
            <% section[:items].each do |item| %>
               <% html_options = { class: "flex items-center gap-4 w-full px-6 py-4 text-lg font-normal text-zinc-100 transition" } %>
               <% html_options[:data] = { turbo_method: item.method } if item.method.present? %>

               <li class="w-full hover:bg-indigo-500/20 focus-visible:ring-2 focus-visible:ring-indigo-400">
                  <%= link_to item.path || '#', html_options do %>
                     <i class="<%= item.icon %> text-lg text-zinc-100 transition-all duration-100" aria-hidden="true"></i>
                     <span class="text-zinc-100 text-lg font-normal"><%= item.name %></span>
                  <% end %>
               </li>
            <% end %>
         </ul>
      <% end %>

   </nav>
</div>
