<div class="flex flex-col items-center gap-4">
   <!-- Icon -->
   <div
    class="
      flex h-24 w-24 items-center justify-center
      rounded-2xl
      text-indigo-400
    "
  >
      <%= image_tag skill.icon.attached? ? url_for(skill.icon) : 'default_pic.png',
      alt: skill.name,
      class: "h-24 w-24 object-contain" %>
   </div>

   <!-- Name -->
   <h3 class="text-sm font-semibold tracking-wide text-slate-100 uppercase">
      <%= skill.name %>
   </h3>

   <!-- Tags -->
   <div class="flex flex-wrap justify-center gap-2 max-w-[220px]">
      <% skill.tags.each do |tag| %>
         <span
        class="
          text-xs
          font-medium
          text-slate-400
          bg-white/5
          px-2 py-0.5
          rounded-full
        "
      >
            <%= tag.name %>
         </span>
      <% end %>
   </div>
</div>
