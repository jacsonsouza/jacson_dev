<div
  class="card group relative flex h-full flex-col overflow-hidden transition-all duration-500 hover:-translate-y-2.5"
  data-category="backend"
  style="--skill-color: <%= skill.color %>;"
>

   <div
      class="absolute -right-10 -top-10 z-0 h-32 w-32 rounded-full opacity-5 transition-all duration-500 group-hover:scale-125 group-hover:opacity-10"
      style="background-color: var(--skill-color);"
   ></div>

   <div class="mb-5 flex items-center gap-4">
      <div
         class="flex h-16 w-16 items-center justify-center rounded-xl bg-linear-to-br from-(--skill-color) to-from-(--skill-color)/30 p-2 transition-all duration-500 group-hover:rotate-6 group-hover:scale-110"
      >
         <%= image_tag url_for(skill.icon), alt: skill.name, class: "h-full w-full object-contain" %>
      </div>

      <div>
         <h3 class="font-['Raleway'] text-2xl font-bold text-white">
            <%= skill.name %>
         </h3>
         <div class="mt-1 text-sm text-zinc-100/70">
            <%= skill.category %>
         </div>
      </div>
   </div>

   <p class="mb-6 grow text-sm text-zinc-100/90">
      <%= skill.short_description %>
   </p>

   <div class="mb-5">
      <div class="mb-2 flex justify-between text-sm font-medium text-zinc-100/90">
         <span>Proficiência</span>
         <span><%= skill.proficiency %>%</span>
      </div>

      <div class="h-2 overflow-hidden rounded-xl bg-zinc-100/10">
         <div
            class="h-full rounded-xl bg-linear-to-r from-(--skill-color) to-(--skill-color)/30 transition-[width] duration-1500"
            style="width: <%= skill.proficiency %>%"
            data-width="<%= skill.proficiency %>">
         </div>
      </div>
   </div>

   <div class="mt-auto flex items-center justify-between">
      <div class="text-sm text-zinc-100/70">
         3+ anos de experiência
      </div>

      <div class="rounded-3xl bg-linear-to-br from-primary to-accent px-3 py-1.5 text-sm font-medium text-white">
         <%= skill.tags.first.name %>
      </div>
   </div>
</div>