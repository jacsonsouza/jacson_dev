<div data-controller="sidebar">
   <div class="btn-rounded md:hidden fixed bottom-6 right-6 z-[1000]" 
        data-sidebar-target="menuToggle" 
        data-action="click->sidebar#toggleSidebar">
      <i class="fas fa-bars text-white text-2xl transition-all duration-300"></i>
   </div>

   <nav data-sidebar-target="sidebar"
        class="fixed top-0 left-0 w-64 flex flex-col z-[100] py-7 px-0 h-screen bg-gray-900/90 backdrop-blur-md shadow-lg 
               -translate-x-full transition-transform duration-500 ease-in-out scroll-thin md:translate-x-0 md:block">

      <div class="flex flex-col items-center px-5 pb-5 border-b border-white/10 mb-5">
         <%= image_tag "default_pic.png", class: "w-28 h-28 rounded-full object-cover border-4 border-indigo-500 mb-4 shadow-lg", alt: "Admin"%>
         <h2 class="text-2xl font-semibold mb-3.5 bg-clip-text text-transparent bg-gradient-to-br from-indigo-500 to-pink-500">Jacson</h2>
         <span class="text-slate-300 text-sm bg-indigo-500/20 inline-block px-3 py-1 rounded-full"><%= t('users.menu.admin') %></span>
      </div>

      <%= render partial: 'layouts/users/partials/menu_section',
           collection: [
             { items: main_items,     name: t('users.menu.sections.main') },
             { items: content_items,  name: t('users.menu.sections.content') },
             { items: settings_items, name: t('users.menu.sections.settings') }
           ],
           as: :section %>
   </nav>
</div>
