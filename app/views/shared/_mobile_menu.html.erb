<div data-controller="mobile-menu">

   <div data-mobile-menu-target="overlay" 
             data-action="click->mobile-menu#closeMenus touchstart->mobile-menu#touchStart touchend->mobile-menu#touchEnd"
      class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-40"></div>

   <!-- toggle button mobile -->
   <div data-mobile-menu-target="menuToggle" 
             data-action="click->mobile-menu#toggleMobileMenu" 
      class="md:hidden fixed bottom-6 right-6 w-16 h-16 rounded-full bg-gradient-to-br from-indigo-500 to-rose-400 z-[1000] cursor-pointer shadow-lg flex items-center justify-center transition-all duration-300">
      <i class="fas fa-plus text-white text-2xl transition-all duration-300" data-mobile-menu-target="toggleIcon"></i>
   </div>

   <!-- Menu Mobile -->
   <div data-mobile-menu-target="mobileMenu" 
             class="hidden fixed bottom-24 right-6 flex flex-col items-center justify-center z-45 opacity-0 translate-y-5 transition-all duration-300">
      <div data-mobile-menu-target="mobileMenuItem" 
                 data-action="click->mobile-menu#navigate" 
         data-target="home" 
         class="w-12 h-12 rounded-full bg-gray-900/90 backdrop-blur-md flex items-center justify-center my-2 cursor-pointer transition-all duration-300 shadow-lg relative group active:bg-primary/30">
         <i class="fas fa-home text-white text-lg"></i>
         <span class="absolute right-12 bg-gray-900/90 px-3 py-1 rounded-lg text-white font-medium opacity-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap">Início</span>
      </div>
      <div data-mobile-menu-target="mobileMenuItem" 
                 data-action="click->mobile-menu#navigate" 
         data-target="about" 
         class="w-12 h-12 rounded-full bg-gray-900/90 backdrop-blur-md flex items-center justify-center my-2 cursor-pointer transition-all duration-300 shadow-lg relative group active:bg-primary/30">
         <i class="fas fa-user text-white text-lg"></i>
         <span class="absolute right-12 bg-gray-900/90 px-3 py-1 rounded-lg text-white font-medium opacity-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap">Sobre</span>
      </div>
      <div data-mobile-menu-target="mobileMenuItem" 
                 data-action="click->mobile-menu#navigate" 
         data-target="skills" 
         class="w-12 h-12 rounded-full bg-gray-900/90 backdrop-blur-md flex items-center justify-center my-2 cursor-pointer transition-all duration-300 shadow-lg relative group active:bg-primary/30">
         <i class="fas fa-code text-white text-lg"></i>
         <span class="absolute right-12 bg-gray-900/90 px-3 py-1 rounded-lg text-white font-medium opacity-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap">Habilidades</span>
      </div>
      <div data-mobile-menu-target="mobileMenuItem" 
                 data-action="click->mobile-menu#navigate" 
         data-target="portfolio" 
         class="w-12 h-12 rounded-full bg-gray-900/90 backdrop-blur-md flex items-center justify-center my-2 cursor-pointer transition-all duration-300 shadow-lg relative group active:bg-primary/30">
         <i class="fas fa-briefcase text-white text-lg"></i>
         <span class="absolute right-12 bg-gray-900/90 px-3 py-1 rounded-lg text-white font-medium opacity-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap">Portfólio</span>
      </div>
      <div data-mobile-menu-target="mobileMenuItem" 
                 data-action="click->mobile-menu#navigate" 
         data-target="contact" 
         class="w-12 h-12 rounded-full bg-gray-900/90 backdrop-blur-md flex items-center justify-center my-2 cursor-pointer transition-all duration-300 shadow-lg relative group active:bg-primary/30">
         <i class="fas fa-envelope text-white text-lg"></i>
         <span class="absolute right-12 bg-gray-900/90 px-3 py-1 rounded-lg text-white font-medium opacity-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap">Contato</span>
      </div>
   </div>
</div>