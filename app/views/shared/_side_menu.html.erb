<nav id="side-menu" class="hidden lg:block w-64 bg-gray-900/80
                           rounded-2xl shadow-2xl py-8 px-5 h-fit sticky
                           top-5 left-5 mr-5 backdrop-blur-md border border-indigo-500/10">

   <%= rc 'app/logo', text_class: 'mb-10' %>

   <ul class="w-full grid grid-rows-5 h-full">

      <% items = [
      { name: t('links.home'), icon: 'fas fa-home', target: 'home', path: root_path },
      { name: t('links.about'), icon: 'fas fa-user', target: 'about', path: about_path },
      { name: t('links.skills'), icon: 'fas fa-code', target: 'skills', path: skills_path },
      { name: t('links.projects'), icon: 'fas fa-briefcase', target: 'projects', path: projects_path },
      { name: t('links.contact'), icon: 'fas fa-envelope', target: 'contact', path: contact_path },
    ] %>

      <% items.each do |item| %>
         <li id="item-<%= item[:target] %>" class="mb-3" data-target="<%= item[:target] %>">
            <%= active_link_to item[:path] || '#', 
                          class: "menu-link", 
                          class_active: "menu-link-active",
                          active: :exclusive do %>

               <i class="<%= item[:icon] %> text-lg w-6 text-center"></i>
               <span><%= item[:name] %></span>

            <% end %>
         </li>
      <% end %>

   </ul>
</nav>

<%= render 'shared/mobile_menu' %>