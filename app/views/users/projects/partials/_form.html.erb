<%= simple_form_for [:users, project] do |f| %>
   <%= f.input :name %>
   <%= f.input :short_description, as: :text %>
   <%= f.input :category, collection: Project.category_options, prompt: :translate %>
   <%= f.association :skills, wrapper: :multiselect, input_html: { data: { controller: 'tom-select' } } %>

   <div class="grid grid-cols-2 gap-4">
      <%= f.input :start_date, as: :date, wrapper: :date %>
      <%= f.input :end_date, as: :date, wrapper: :date %>
   </div>

   <%= f.input :url %>
   <%= f.input :repository %>

   <%= f.input :image, as: :image %>
   <%= f.input :details, as: :rich_text_area %>

   <%= f.input :favorite, as: :boolean, wrapper: :checkbox %>

   <%= f.button :submit %>
<% end %>