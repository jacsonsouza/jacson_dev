<%= provide(:page_title, @skill.name) %>

<section class="relative w-full py-5 overflow-hidden" style="--skill-color: <%= @skill.color %>">

   <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">

         <div class="lg:col-span-2">
            <header class="mb-10">
               <h2 class="heading-2 mb-3">
                  <%= @skill.name %>
               </h2>

               <p class="body-text">
                  <%= @skill.short_description %>
               </p>
            </header>

            <article class="action-text">
               <%= @skill.description %>
            </article>
         </div>

         <aside class="lg:sticky lg:top-24">
            <div class="rounded-2xl border border-white/10 bg-slate-900/80 backdrop-blur p-6">

               <div class="flex flex-col items-center text-center gap-4">

                  <div class="flex h-20 w-20 items-center justify-center
                              rounded-full bg-slate-800 border border-white/10">
                     <%= image_tag url_for(@skill.icon), alt: @skill.name, class: "h-10 w-10 object-contain" %>
                  </div>

                  <h3 class="heading-3">
                     <%= @skill.name %>
                  </h3>

                  <span class="text-sm text-slate-400">
                     <%= @skill.category_human %>
                  </span>

               </div>

               <% if @skill.tags.any? %>
                  <div class="mt-6 border-t border-white/10 pt-4">
                     <ul class="flex flex-wrap justify-center gap-2">
                        <%= safe_join(
                              @skill.tags.map do |tag|
                                 content_tag(
                                    :li,
                                    tag.name,
                                    class: "badge"
                                 )
                              end
                           ) %>
                     </ul>
                  </div>
               <% end %>

            </div>
         </aside>

      </div>
   </div>
</section>
