<li id="skill-<%= skill.id %>">
   <article 
      class="card gap-4 transition-all duration-500 hover:-translate-y-2.5"
      style="--skill-color: <%= skill.color %>;">

      <div class="flex items-center gap-4">
         <div class="flex h-16 w-16 items-center justify-center rounded-xl bg-linear-to-r from-(--skill-color) to-(--skill-color)/30 shadow-brand">
            <%= image_tag skill.icon.attached? ? url_for(skill.icon) : 'default_pic.png',
                     alt: skill.name,
                     class: 'h-full w-full object-contain',
                     loading: 'lazy' %>
         </div>
         <div class="flex flex-col justify-between gap-2">
            <%= link_to skill.name, users_skill_path(skill), class: 'heading-2 text-white' %>
            <span class="text-sm text-slate-300/70"><%= skill.category_human %></span>
         </div>
      </div>

      <p class="grow text-sm text-zinc-100/90">
         <%= skill.short_description %>
      </p>

      <div class="flex flex-wrap gap-2">
         <%= safe_join(skill.tags.map { |tag| content_tag(:span, tag.name, class: 'badge', title: tag.name) }) %>
      </div>

      <hr class="border-white/10">

      <div class="flex flex-wrap justify-center gap-2.5">

         <%= link_to edit_users_skill_path(skill),
                     class: 'flex-1 py-2 px-3 bg-white/5 rounded-lg border border-white/10 text-center text-white hover:bg-indigo-500/20 focus:outline-none focus:ring-2 focus:ring-indigo-400',
                     aria: { label: t('skills.edit', name: skill.name) } do %>

            <i class="fas fa-pen mr-1" aria-hidden="true"></i>
            <span><%= t('skills.edit') %></span>

         <% end %>

         <%= link_to users_skill_path(skill), 
                     data: { turbo_method: :delete, turbo_confirm: t('.confirm') },
                     class: 'flex-1 py-2 px-3 bg-white/5 rounded-lg border border-white/10 text-center text-white hover:bg-rose-400/20 hover:border-rose-400/30 focus:outline-none focus:ring-2 focus:ring-rose-400' do %>

            <i class="fas fa-trash mr-1" aria-hidden="true"></i>
            <span><%= t('skills.delete') %></span>

         <% end %>

      </div>

   </article>
</li>