<div class="w-full max-w-md p-7 relative z-10">
   <div class="w-full p-10 bg-gray-900/70 backdrop-blur-md border border-white/10 rounded-3xl shadow-2xl transform-3d">

      <div class="text-center mb-8">
         <h1 class="text-4xl font-bold bg-gradient-to-br from-indigo-500 to-rose-400 bg-clip-text text-transparent">Bem-vindo de volta</h1>
         <p class="text-lg text-slate-300">Entre na sua conta para continuar</p>
      </div>

      <%= simple_form_for @user, url: user_session_path do |f| %>

         <div class="flex flex-col gap-2">
            <%= f.input :email, label: "Email" %>
            <%= f.input :password, label: "Password" %>
         </div>

         <%= f.button :submit %>
      <% end %>
   </div>
</div>