<div class="text-center mb-8">
   <h1 class="text-4xl font-bold bg-gradient-to-br from-indigo-500 to-rose-400 bg-clip-text text-transparent"><%= t('.welcome') %></h1>
   <p class="text-lg text-slate-300"><%= t('.sign_in') %></p>
</div>

<%= simple_form_for @user, url: user_session_path do |f| %>

   <div class="flex flex-col gap-2">
      <%= f.input :email %>
      <%= f.input :password %>
   </div>

   <div class="flex justify-between items-center mb-7 text-sm">
      <div class="flex items-center gap-2 text-slate-300">
         <%= f.check_box :remember_me %>
         <%= f.label :remember_me, t('.remember_me') %>
      </div>
      <%= link_to t('.forgot_password'), new_user_password_path, class: 'text-indigo-500 hover:underline' %>
   </div>

   <%= f.button :submit %>
<% end %>
